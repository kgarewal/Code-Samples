    <%= f.label :pet %><br>
    <%= f.text_field :pet %>
  </div>
  <div class="field">
    <%= f.label :customer %><br>
    <%= f.text_field :customer %>
  </div>
  <div class="field">
    <%= f.label :requires_reminder %><br>
    <%= f.check_box :requires_reminder, {},  1, 0 %>
  </div>
  <div class="field">
    <%= f.label :reason_for_visit %><br>
    <%= f.text_field :reason_for_visit %>
  </div>
  <div class="actions">
    <%= f.submit %>
